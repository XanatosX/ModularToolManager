<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:p="clr-namespace:ModularToolManager.Properties"
             x:Class="ModularToolManager.Views.DependencyView">

	<Grid ColumnDefinitions="150, 100, Auto">
		<TextBlock VerticalAlignment="Center" Text="{Binding Name}"/>
		<TextBlock VerticalAlignment="Center" Grid.Column="1" Text="{Binding Version}"/>
		<StackPanel VerticalAlignment="Center" Grid.Column="2" Spacing="10" Orientation="Horizontal">
			<Button Classes="link" IsVisible="{Binding ProjectSet}" Content="{Binding ProjectUrl}" Command="{Binding OpenUrl}" CommandParameter="{Binding ProjectUrl}"/>
			<Button Classes="link" IsVisible="{Binding LicenseSet}" Content="{Binding LicenseUrl}" Command="{Binding OpenUrl}" CommandParameter="{Binding LicenseUrl}"/>
		</StackPanel>
	</Grid>
</UserControl>
