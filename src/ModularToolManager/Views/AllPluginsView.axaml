<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ModularToolManager.Views.AllPluginsView">
	<Grid RowDefinitions="*, Auto">
			<Grid ColumnDefinitions="Auto, *">
				<Border BorderThickness="0,0,2,0" MinWidth="40"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
					<ListBox Items="{Binding Plugins}" SelectedItem="{Binding SelectedEntry}"/>
				</Border>
				<ContentControl Grid.Column="1" Content="{Binding PluginView}"></ContentControl>
			</Grid>
		<Grid Grid.Row="1">
			<StackPanel Orientation="Horizontal">
				<Button Content="PLACEHOLDER" Command="{Binding AbortCommand}"/>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>
