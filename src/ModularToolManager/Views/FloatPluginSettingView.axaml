<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ModularToolManager.Views.FloatPluginSettingView">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="{StaticResource PluginSettingName}"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding DisplayName}"/>
		<TextBox Grid.Column="1" Text="{Binding FloatNumber}"/>
	</Grid>
</UserControl>
