<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ModularToolManager.Views.ModalWindow"
        Title="ModalWindow"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
		WindowStartupLocation="CenterOwner"
		SizeToContent="WidthAndHeight">
	<Panel>
		<ExperimentalAcrylicBorder IsHitTestVisible="False">
			<ExperimentalAcrylicBorder.Material>
				<ExperimentalAcrylicMaterial
					BackgroundSource="Digger"
					TintColor="Black"
					TintOpacity="1"
					MaterialOpacity="0.65" />
			</ExperimentalAcrylicBorder.Material>
		</ExperimentalAcrylicBorder>
		<Grid RowDefinitions="40, Auto">
			<Grid VerticalAlignment="Center" ColumnDefinitions="Auto, *" Margin="10,0,5,0">
				<PathIcon Data="{Binding PathIcon}" IsVisible="{Binding PathIcon, Converter={x:Static ObjectConverters.IsNotNull}}"/>
				<TextBlock Grid.Column="1" Text="{Binding Title}" Margin="10,0,0,0"/>
			</Grid>
			<ContentControl Grid.Row="1" Content="{Binding ModalContent}" Margin="10,5,5,5"/>
		</Grid>
		
	</Panel>
</Window>
