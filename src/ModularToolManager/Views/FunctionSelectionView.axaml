<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:p="clr-namespace:ModularToolManager.Properties"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ModularToolManager.Views.FunctionSelectionView"
			 MaxHeight="450">
	<Grid RowDefinitions="Auto, *">
		<TextBox Watermark="{x:Static p:Resources.FunctionSelection_SearchForFunction}" IsVisible="{Binding FunctionsNotEmpty}"/>
		<ListBox Grid.Row="1" Items="{Binding AllFunctions}"/>
	</Grid>
</UserControl>
